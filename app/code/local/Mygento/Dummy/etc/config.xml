                        <class>dummy/observer</class>
                        <method>dummyMethod</method>
                    </dummy_any_name_of_the_action>
                </observers>
            </customer_save_before>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <dummy after="Mage_Adminhtml">Mygento_Dummy_Adminhtml</dummy>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <dummy>
                    <files>
                        <default>Mygento_Dummy.csv</default>
                    </files>
                </dummy>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <dummy>
                                            <title>Dummy Configuration</title>
                                        </dummy>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <dummy>
            <general>
                <debug>0</debug>
                <cron_settings>0 22 * * *</cron_settings>
            </general>
        </dummy>
    </default>
    <frontend>
        <translate>
            <modules>
                <dummy>
                    <files>
                        <default>Mygento_Dummy.csv</default>
                    </files>
                </dummy>
            </modules>
        </translate>
