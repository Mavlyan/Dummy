                <args>
                    <module>Mygento_Dummy</module>
                    <frontName>dummy</frontName>
                </args>
            </dummy>
        </routers>
        <default>
            <router>dummy</router>
        </default>
    </frontend>
    <crontab>
        <jobs>
            <dummy_job>
                <schedule>
                    <config_path>dummy/general/cron_settings</config_path>
                </schedule>
                <run>
                    <model>dummy/dummy::ololoMethod</model>
                </run>
            </dummy_job>
        </jobs>
    </crontab>
